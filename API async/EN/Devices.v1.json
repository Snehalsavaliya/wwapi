{
  "openapi": "3.0.0",
  "info": {
    "title": "Devices",
    "version": "1.0",
    "description": "Retrive and update the device information",
    "contact": {
      "name": "cs"
    }
  },
  "servers": [
    {
      "url": "https://api.cs-remote-care.jp/v1"
    }
  ],
  "paths": {
    "/devices": {
      "parameters": [],
      "patch": {
        "summary": "Update Device Information",
        "operationId": "patch-devices",
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "properties": {
                    "taskid": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "taskid"
                  ]
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "taskid": "12"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "properties": {
                    "Error": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "Error"
                  ]
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "Error": "Invalid user or password"
                    }
                  }
                }
              }
            }
          }
        },
        "description": "Update the functions' state of existing devices.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "",
                "type": "object",
                "properties": {
                  "auth": {
                    "type": "object",
                    "required": [
                      "applicationid",
                      "userid",
                      "password"
                    ],
                    "properties": {
                      "applicationid": {
                        "type": "string",
                        "minLength": 1
                      },
                      "userid": {
                        "type": "string",
                        "minLength": 1
                      },
                      "password": {
                        "type": "string",
                        "minLength": 1
                      }
                    }
                  },
                  "functions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "devices": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "auth",
                  "functions",
                  "devices"
                ]
              },
              "examples": {
                "example-1": {
                  "value": {
                    "auth": {
                      "applicationid": "JobMgtTool",
                      "userid": "user",
                      "password": "password"
                    },
                    "functions": [
                      "30001:30001:true",
                      "30002:30002:false",
                      "30004:30004:true"
                    ],
                    "devices": [
                      "CenterId1:DeviceId1",
                      "CenterId2:DeviceId2",
                      "CenterId3:DeviceId3",
                      "CenterId4:DeviceId4"
                    ]
                  }
                }
              }
            }
          },
          "description": "Application id, user id , password,  functions' state and devices to be updated"
        },
        "parameters": []
      }
    }
  },
  "components": {
    "schemas": {},
    "securitySchemes": {}
  }
}