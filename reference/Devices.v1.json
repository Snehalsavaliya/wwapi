{
  "openapi": "3.0.0",
  "info": {
    "title": "Devices",
    "version": "1.0",
    "description": "Retrive and update the device information",
    "contact": {
      "name": "cs"
    }
  },
  "servers": [
    {
      "url": "https://api.cs-remote-care.jp/v1"
    }
  ],
  "paths": {
    "/devices": {
      "parameters": [],
      "get": {
        "summary": "Get Device Info by Device ID",
        "tags": [],
        "responses": {
          "200": {
            "description": "Device Found",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "properties": {
                    "device": {
                      "type": "string",
                      "minLength": 1
                    },
                    "functions": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "device",
                    "functions"
                  ]
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "device": "CenterId1:DeviceId1",
                      "functions": [
                        "30001:30001:true",
                        "30002:30002:false",
                        "30004:30004:true"
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "properties": {
                    "Error": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "Error"
                  ]
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "Error": "Invalid User or password"
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "get-devices",
        "description": "Retrieve the information of the device with the matching device id.",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "",
                "type": "object",
                "properties": {
                  "auth": {
                    "type": "object",
                    "properties": {
                      "applicationid": {
                        "type": "string"
                      },
                      "userid": {
                        "type": "string",
                        "minLength": 1
                      },
                      "password": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "applicationid",
                      "userid",
                      "password"
                    ]
                  },
                  "device": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "auth",
                  "device"
                ]
              },
              "examples": {
                "example-1": {
                  "value": {
                    "auth": {
                      "applicationid": "JobMgtTool",
                      "userid": "user",
                      "password": "password"
                    },
                    "device": "CenterId:DeviceId"
                  }
                }
              }
            }
          },
          "description": "Application id, user id , password and device to be retrive"
        }
      },
      "patch": {
        "summary": "Update Device Information",
        "operationId": "patch-devices",
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "properties": {
                    "Error": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "Error"
                  ]
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "Error": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "description": "Update the function's state of existing devices.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "",
                "type": "object",
                "properties": {
                  "auth": {
                    "type": "object",
                    "required": [
                      "applicationid",
                      "userid",
                      "password"
                    ],
                    "properties": {
                      "applicationid": {
                        "type": "string",
                        "minLength": 1
                      },
                      "userid": {
                        "type": "string",
                        "minLength": 1
                      },
                      "password": {
                        "type": "string",
                        "minLength": 1
                      }
                    }
                  },
                  "functions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "devices": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "auth",
                  "functions",
                  "devices"
                ]
              },
              "examples": {
                "example-1": {
                  "value": {
                    "auth": {
                      "applicationid": "JobMgtTool",
                      "userid": "user",
                      "password": "password"
                    },
                    "functions": [
                      "30001:30001:true",
                      "30002:30002:false",
                      "30004:30004:true"
                    ],
                    "devices": [
                      "CenterId1:DeviceId1",
                      "CenterId2:DeviceId2",
                      "CenterId3:DeviceId3",
                      "CenterId4:DeviceId4"
                    ]
                  }
                }
              }
            }
          },
          "description": "Application id, user id , password,  functions settings and devices to be updated"
        },
        "parameters": []
      }
    }
  },
  "components": {
    "schemas": {},
    "securitySchemes": {}
  }
}